<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.locinder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/passport"
        android:label="@string/app_name"
        android:roundIcon="@drawable/passport"
        android:supportsRtl="true"
        android:theme="@style/Theme.Locinder">
        <activity android:name=".Locale"></activity>
        <activity android:name=".splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ResetPassword" />
        <activity android:name=".ChatRoom" />
        <activity android:name=".ShowChats" />
        <activity android:name=".Events" />
        <activity android:name=".FinishOrganizing" />
        <activity android:name=".Organizer" />
        <activity android:name=".ControlActivity" />
        <activity android:name=".ReviewActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".slideActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>